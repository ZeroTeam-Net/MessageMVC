{
  "ASPNETCORE_ENVIRONMENT_": "Development",
  "AppName": "HttpGateway",
  /*Http配置*/
  "http": [
    {
      "Port": 8080,
      "IsHttps": false
    }
    //,{
    //  "Port": 4331,
    //  "IsHttps": true,
    //  "CerFile": "cert.pfx",
    //  "CerPwd": "123456"
    //}
  ],
  /*MicroZero站点配置*/
  "Zero": {
    "Global": {
      "ZeroGroup": [
        {
          "Name": "Test",
          /*ZeroCenter主机IP地址*/
          "Address": "47.98.229.139",
          /*ZeroCenter管理端口号*/
          "ManagePort": 14000,
          /*ZeroCenter监测端口号*/
          "MonitorPort": 14001,
          /*服务器唯一标识*/
          "ServiceKey": "20180410"
        }
      ],
      /*限速模式（Single 单线程 ThreadCount 按线程数限制 WaiCtount 按等待数限制）*/
      "SpeedLimitModel": "WaitCount",
      /*最大等待数*/
      "MaxWait": 1000,
      /*最大Task与Cpu核心数的倍数关系*/
      "TaskCpuMultiple": 1,
      /*ZeroApplication是否发出与ZeroCenter相关的同步事件,工具扩展应用使用*/
      "CanRaiseEvent": true,
      /*站点数据使用AppName为文件夹*/
      "StationIsolate": true
    },
    "socketOption": {
      "PoolTimeOut": 500,
      "Backlog": 8096, //连接队列数量
      "ConnectTimeout": 500, // 连接失败时长
      "HeartbeatIvl": 0, //心跳间隔时长
      "HeartbeatTimeout": 200, //心跳超时时长
      "HeartbeatTtl": 200, //心跳TTL
      "Linger": 200, //自动关闭时长
      "ReconnectIvl": 100, // 重新连接时间间隔
      "ReconnectIvlMax": 500, //重新连接失败时长
      "RecvTimeout": 2000, //接收超时时长
      "SendTimeout": 1000, //发送超时时长
      "TcpKeepalive": 0, //启用Keeplive
      "TcpKeepaliveIdle": 4096, //TCP发送keepalive消息的频度,单位秒
      "TcpKeepaliveIntvl": 4096 //当TcpKeepalive探测没有确认时，重新发送探测的频度,单位秒
    },
    "HttpGateway": {
      "StationName": "HttpGateway"
    }
  },
  "AppSettings": {
    "HookApi": false
  },
  "Route": {
    "FastCall": true
  },
  "Logging": {
    /*是否开启标准控制台日志,动态修改无效*/
    "console": false,
    /*是否使用基础文本日志记录器,动态修改无效*/
    "innerLogger": false,
    /*是否开启跟踪日志,可动态修改*/
    "monitor": true,
    /*是否开启SQL语句日志,可动态修改*/
    "sql": false,
    /*基础文本日志记录器配置*/
    "Text": {
      /*日志路径,动态修改可能延迟生效
      "path": "e:\\projects\\logs",*/
      /*是否按日期分文件夹,动态修改可能延迟生效*/
      "dayFolder": false,
      /*最大文件数量,可动态修改*/
      "disable": true,
      /*最大文件数量(dayFolder为false有效),可动态修改*/
      "maxFile": 99,
      "LogLevel": "Information"
    },
    /*标准日志设置,参考NetCore相关内容*/
    "IncludeScopes": false,
    "LogLevel": {
      "Default": "Trace",
      "Microsoft": "Warning"
    },
    "Console": {
      //"Format": "Systemd"
    }
  },
  "Kestrel": {
    "AddServerHeader": true,
    "AllowSynchronousIO": false,
    "EndpointDefaults": {
      "Protocols": "Http1AndHttp2"
    },
    "Limits": {
      "MinResponseDataRate": null
    },
    "Endpoints": {
      "Http": {
        "Url": "http://0.0.0.0:8080"
      }
      //,
      //"Https": {
      //  "Url": "https://*:5004",
      //  "Certificate": {
      //    "Path": "<path to .pfx file>",
      //    "Password": "<certificate password>"
      //  }
      //}
    }
  },
  "bk": [
    {
      "Name": "Dev",
      /*ZeroCenter主机IP地址*/
      "Address": "47.111.0.73",
      /*ZeroCenter管理端口号*/
      "ManagePort": 14000,
      /*ZeroCenter监测端口号*/
      "MonitorPort": 14001,
      /*服务器唯一标识*/
      "ServiceKey": "20180410"
    },
    {
      "Name": "Local",
      /*ZeroCenter主机IP地址*/
      "Address": "192.168.123.129",
      /*ZeroCenter监测端口号*/
      "MonitorPort": 8001,
      /*ZeroCenter管理端口号*/
      "ManagePort": 8000,
      /*服务器唯一标识*/
      "ServiceKey": "agebull"
    }
  ]
}