{
  "ASPNETCORE_ENVIRONMENT_": "Development",
  "AppName": "MulitSample",

  "Zero": {
    "Global": {
      "ZeroGroup": [
        {
          "Name": "Dev",
          /*ZeroCenter主机IP地址*/
          "Address": "47.111.0.73",
          /*ZeroCenter管理端口号*/
          "ManagePort": 14000,
          /*ZeroCenter监测端口号*/
          "MonitorPort": 14001,
          /*服务器唯一标识*/
          "ServiceKey": "20180410"
        }
      ],
      /*限速模式（Single 单线程 ThreadCount 按线程数限制 WaitCount 按等待数限制）*/
      "SpeedLimitModel": "WaitCount",
      "MaxWait": 256,
      /*最大Task与Cpu核心数的倍数关系*/
      "TaskCpuMultiple": 2,
      "CanRaiseEvent": true
    },
    "MulitSample": {
      "StationName": "MulitSample"
    },
    "socketOption": {
      "Backlog": 50000, //连接队列数量
      "ConnectTimeout": 500, // 连接失败时长
      "Linger": 200, //自动关闭时长
      "ReconnectIvl": 50, // 重新连接时间间隔
      "ReconnectIvlMax": 500, //重新连接失败时长
      "RecvTimeout": 3000, //接收超时时长
      "SendTimeout": 3000, //发送超时时长
      "TcpKeepalive": 1, //启用Keeplive
      "TcpKeepaliveIdle": 5, //TCP发送keepalive消息的频度,单位秒
      "TcpKeepaliveIntvl": 5, //当TcpKeepalive探测没有确认时，重新发送探测的频度,单位秒
      "HeartbeatIvl": 1, //心跳间隔时长
      "HeartbeatTimeout": 1000, //心跳超时时长
      "HeartbeatTtl": 10000 //心跳TTL
    }
  },
  "MessagePoster": {
    "KafkaProducer": "test1",
    "ZmqProducer": "Inproc"
  },
  "Kafka": {
    "BootstrapServers": "47.111.0.73:9092",
    "GroupId": "kaisen",
    "AutoOffsetReset": "Earliest",
    "EnableAutoCommit": false
  },
  "Logging": {
    /*是否开启标准控制台日志,动态修改无效*/
    "console": true,
    /*是否使用基础文本日志记录器,动态修改无效*/
    "innerLogger": false,
    /*是否开启跟踪日志,可动态修改*/
    "monitor": true,
    /*是否开启SQL语句日志,可动态修改*/
    "sql": false,
    /*基础文本日志记录器配置*/
    "Text": {
      /*日志路径,动态修改可能延迟生效,如未设置,则会被设置为与应用数据文件夹同级的logs目录
      "path": "e:\\projects\\logs",*/
      /*是否按日期分文件夹,动态修改可能延迟生效*/
      "dayFolder": false,
      /*最大文件数量,可动态修改*/
      "disable": false,
      /*最大文件数量(dayFolder为false有效),可动态修改*/
      "maxFile": 99,
      "LogLevel": "Information"
    },
    /*标准日志设置,参考NetCore相关内容*/
    "IncludeScopes": false,
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Information",
      "Microsoft.Hosting.Lifetime": "Information"
    }
    //,
    //"Console": {
    //  "Format": "Systemd"
    //}
  }
}