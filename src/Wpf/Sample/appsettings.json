{
  "MessageMVC": {
    "Option": {
      "UseZero": true,
      "IsOpenAccess": true,
      ///线程池最大工作线程数
      "MaxWorkThreads": 0,
      ///   线程池最大IO线程数
      "MaxIOThreads": 0,
      //数据/日志/其它配置使用AppName为文件夹
      "IsolateFolder": false,
      //短名称
      "AppName": "HttpSample",
      //短名称
      "ShortName": "HttpSample",
      //本地数据文件夹
      "DataFolder": null,
      //本地配置文件夹
      "ConfigFolder": null,
      //启用插件自动加载
      "EnableAddIn": true,
      //插件地址,如为空则与运行目录相同
      "AddInPath": null
    },
    "Tools": {
      //启用Monitor模式日志记录
      "EnableMonitorLog": true,
      //启用调用链跟踪(启用埋点中间件时自动打开)
      "EnableLinkTrace": false,
      //启用异常消息本地重放
      "EnableMessageReConsumer": true,
      //启用埋点中间件
      "EnableMarkPoint": true,
      //回执服务名称
      "MarkPointName": "MarkPoint",
      //回执接口方法
      "ReceiptService": "TrdReceipt",
      //回执接口方法
      "ReceiptApi": "receipt/v1/save"
    },
    "ApiContract": {
      //启用返回值跟踪
      "EnableResultTrace": true,
      //返回值跟踪包含机器名
      "TraceMachine": false
    },
    "Redis": {
      "ConnectionString": "47.103.103.208,autodispose=false",
      "GuardCheckTime": 3000,
      "MessageLockTime": 3000,
      "FailedIsError": false,
      "NoSupperIsError": false
    },
    "PlanService": {
      "ServiceName": "PlanTask",
      "PostApiName": "v1/post"
    },
    "Kafka": {
      "BootstrapServers": "47.103.103.208:9092",
      "GroupId": "kaisen",
      "AutoOffsetReset": "Earliest",
      "EnableAutoCommit": false
    },
    "ConfigSync": {
      "ConnectionString": "47.103.103.208"
    },
    "MessagePoster": {
      "default": "HttpPoster",
      "HttpPoster": "ConfigEdit",
      "CsRedisPoster": "PlanTask",
      "KafkaPoster": "MarkPoint"
    },
    "HttpClient": [
      {
        "Name": "Default",
        "Url": "http://localhost:8000"
      },
      {
        "Name": "ConfigEdit",
        "Url": "http://47.103.103.208:8002",
        "Services": "ConfigEdit"
      }
    ]
  },
  "LogRecorder": {
    /*不注册日志器*/
    "noRegist": true,
    /*是否开启标准控制台日志,动态修改无效*/
    "console": true,
    /*是否使用基础文本日志记录器,动态修改无效*/
    "innerLogger": true,
    /*是否开启跟踪日志,可动态修改*/
    "monitor": true,
    /*跟踪日志是否包含详细信息,可动态修改*/
    "details": true,
    /*是否开启SQL语句日志,可动态修改*/
    "sql": false
  },
  "Logging": {
    /*标准日志设置,参考NetCore相关内容*/
    "IncludeScopes": false,
    /*基础文本日志记录器配置*/
    "Text": {
      /*日志路径,动态修改可能延迟生效,如未设置,则会被设置为与应用数据文件夹同级的logs目录*/
      "path": null,
      /*是否按日期分文件夹,动态修改可能延迟生效*/
      "dayFolder": false,
      /*最大文件数量,可动态修改*/
      "disable": false,
      /*最大文件数量(dayFolder为false有效),可动态修改*/
      "maxFile": 99,
      "LogLevel": "Trace"
    },
    "LogLevel": {
      "Default": "Trace",
      "Microsoft": "Trace"
    },
    "Console": {
      //"Format": "Systemd"
    }
  }
}