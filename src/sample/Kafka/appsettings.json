{
  "ASPNETCORE_ENVIRONMENT_": "Development",
  "MessageMVC": {
    "Option": {
      "UseZero": true,
      ///线程池最大工作线程数
      "MaxWorkThreads": 0,
      ///   线程池最大IO线程数
      "MaxIOThreads": 0,
      //数据/日志/其它配置使用AppName为文件夹
      "IsolateFolder": false,
      //短名称
      "ShortName": null,
      //本地数据文件夹
      "DataFolder": null,
      //本地配置文件夹
      "ConfigFolder": null,
      //启用插件自动加载
      "EnableAddIn": true,
      //插件地址,如为空则与运行目录相同
      "AddInPath": null
    },
    "Tools": {
      //启用调用链跟踪(使用IZeroContext全局上下文)
      "EnableLinkTrace": false
    },
    "MessagePoster": {
      "default": "HttpPoster",
      "HttpPoster": "http,PlanTest"
    },
    "Kafka": {
      "BootstrapServers": "192.168.240.132:9092",
      "Producer": {
        "ApiVersionFallbackMs": 100
      },
      "Client": {
        "ApiVersionFallbackMs": 100
      },
      "Consumer": {
        "GroupId": "kaisen",
        "AutoOffsetReset": "Earliest",
        "EnableAutoCommit": false
      }
    }
  },
  "Logging": {
    "LogRecorder": {
      /*不注册日志器*/
      "noRegist": true,
      /*是否使用基础文本日志记录器,动态修改无效*/
      "innerLogger": false,
      /*是否启动跟踪日志,可动态修改*/
      "monitor": true,
      /*跟踪日志是否包含详细信息,可动态修改*/
      "details": false,
      /*是否启动SQL语句日志,可动态修改*/
      "sql": false
    },
    /*基础文本日志记录器配置*/
    "Text": {
      /*日志路径,动态修改可能延迟生效,如未设置,则会被设置为与应用数据文件夹同级的logs目录*/
      "path": null,
      /*是否按日期分文件夹,动态修改可能延迟生效*/
      "dayFolder": false,
      /*最大文件数量,可动态修改*/
      "disable": true,
      /*最大文件数量(dayFolder为false有效),可动态修改*/
      "maxFile": 99,
      "LogLevel": "Information"
    },
    /*标准日志设置,参考NetCore相关内容*/
    "General": {
      "IncludeScopes": false,
      "LogLevel": {
        "Default": "Trace",
        "Microsoft": "Information"
      },
      "Console": {
        //"Format": "Systemd"
      }
    }
  }
}