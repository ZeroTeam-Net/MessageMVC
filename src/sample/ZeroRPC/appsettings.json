{
  "ZeroRPC": {
    "ZeroCenter": [
      {
        "Name": "Dev",
        /*ZeroCenter主机IP地址*/
        "Address": "47.98.229.139",
        /*ZeroCenter管理端口号*/
        "ManagePort": 14000,
        /*ZeroCenter监测端口号*/
        "MonitorPort": 14001,
        /*服务器唯一标识*/
        "ServiceKey": "20180410"
      }
    ],
    "Global": {
      /*限速模式（Single 单线程 ThreadCount 按线程数限制 WaitCount 按等待数限制）*/
      "SpeedLimitModel": "WaitCount",
      "MaxWait": 256,
      /*最大Task与Cpu核心数的倍数关系*/
      "TaskCpuMultiple": 2,
      "CanRaiseEvent": true
    },
    "SocketOption": {
      "Backlog": 50000, //连接队列数量
      "ConnectTimeout": 500, // 连接失败时长
      "Linger": 200, //自动关闭时长
      "ReconnectIvl": 50, // 重新连接时间间隔
      "ReconnectIvlMax": 500, //重新连接失败时长
      "RecvTimeout": 3000, //接收超时时长
      "SendTimeout": 3000, //发送超时时长
      "TcpKeepalive": 1, //启用Keeplive
      "TcpKeepaliveIdle": 5, //TCP发送keepalive消息的频度,单位秒
      "TcpKeepaliveIntvl": 5, //当TcpKeepalive探测没有确认时，重新发送探测的频度,单位秒
      "HeartbeatIvl": 1, //心跳间隔时长
      "HeartbeatTimeout": 1000, //心跳超时时长
      "HeartbeatTtl": 10000 //心跳TTL
    }
  },

  "MessageMVC": {
    "Option": {
      "UseZero": true,
      ///线程池最大工作线程数
      "MaxWorkThreads": 0,
      ///   线程池最大IO线程数
      "MaxIOThreads": 0,
      //数据/日志/其它配置使用AppName为文件夹
      "IsolateFolder": false,
      //短名称
      "AppName": "HttpSample",
      //短名称
      "ShortName": "HttpSample",
      //本地数据文件夹
      "DataFolder": null,
      //本地配置文件夹
      "ConfigFolder": null,
      //启用插件自动加载
      "EnableAddIn": true,
      //插件地址,如为空则与运行目录相同
      "AddInPath": null
    },
    "Tools": {
      //启用Monitor模式日志记录
      "EnableMonitorLog": true,
      //启用调用链跟踪(启用埋点中间件时自动打开)
      "EnableLinkTrace": false,
      //启用异常消息本地重放
      "EnableMessageReConsumer": true,
      //启用埋点中间件
      "EnableMarkPoint": true,
      //回执服务名称
      "MarkPointName": "MarkPoint",
      //回执接口方法
      "ReceiptService": "TrdReceipt",
      //回执接口方法
      "ReceiptApi": "receipt/v1/save"
    },
    "ApiContract": {
      //启用返回值跟踪
      "EnableResultTrace": true,
      //返回值跟踪包含机器名
      "TraceMachine": false
    },
    "Redis": {
      "ConnectionString": "192.168.240.132",
      "GuardCheckTime": 3000,
      "MessageLockTime": 3000,
      "FailedIsError": false,
      "NoSupperIsError": false
    },
    "PlanService": {
      "ServiceName": "PlanTask",
      "PostApiName": "v1/post"
    },
    "Kafka": {
      "BootstrapServers": "192.168.240.132:9092",
      "GroupId": "kaisen",
      "AutoOffsetReset": "Earliest",
      "EnableAutoCommit": false
    },
    "ConfigSync": {
      "ConnectionString": "192.168.240.132"
    },
    "MessagePoster": {
      "default": "HttpPoster",
      "HttpPoster": "ConfigEdit",
      "CsRedisPoster": "PlanTask",
      "KafkaPoster": "MarkPoint"
    },
    "HttpClient": [
      {
        "Name": "Default",
        "Url": "http://localhost:8000"
      },
      {
        "Name": "ConfigEdit",
        "Url": "http://192.168.240.132:8002",
        "Services": "ConfigEdit"
      }
    ],
    "HttpRoute": {
      /// 启用文件上传
      "EnableFormFile": false,
      /// 启用身份令牌
      "EnableAuthToken": false,
      /// 启用Header跟踪(如HTTP请求头)
      "EnableHeader": false,
      /// 特殊URL取第几个路径作为服务名称的映射表
      "HostPaths": 0,
      ///启用快速调用,即直接使用ApiExecuter
      "FastCall": false
    }
  },
  "LogRecorder": {
    /*不注册日志器*/
    "noRegist": true,
    /*是否启动标准控制台日志,动态修改无效*/
    "console": true,
    /*是否使用基础文本日志记录器,动态修改无效*/
    "innerLogger": false,
    /*是否启动跟踪日志,可动态修改*/
    "monitor": true,
    /*跟踪日志是否包含详细信息,可动态修改*/
    "details": true,
    /*是否启动SQL语句日志,可动态修改*/
    "sql": false
  },
  "Logging": {
    /*标准日志设置,参考NetCore相关内容*/
    "IncludeScopes": false,
    "LogLevel": {
      "Default": "Trace",
      "Microsoft": "Trace"
    },
    "Console": {
      //"Format": "Systemd"
    }
  }
}