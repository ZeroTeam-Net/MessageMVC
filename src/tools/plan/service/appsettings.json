{
  "ASPNETCORE_ENVIRONMENT_": "Development",
  "MessageMVC": {
    "Option": {
      "IsOpenAccess": true,
      "UseZero": true,
      ///线程池最大工作线程数
      "MaxWorkThreads": 0,
      ///   线程池最大IO线程数
      "MaxIOThreads": 0,
      //数据/日志/其它配置使用AppName为文件夹
      "IsolateFolder": false,
      //短名称
      "ShortName": null,
      //本地数据文件夹
      "DataFolder": null,
      //本地配置文件夹
      "ConfigFolder": null,
      //启用插件自动加载
      "EnableAddIn": true,
      //插件地址,如为空则与运行目录相同
      "AddInPath": null
    },
    "Tools": {
      //启用Monitor模式日志记录
      "EnableMonitorLog": true,
      //启用调用链跟踪(使用IZeroContext全局上下文)
      "EnableLinkTrace": true,
      //启用异常消息本地重放
      "EnableMessageReConsumer": false,
      //启用埋点中间件
      "EnableMarkPoint": true,
      //回执服务名称
      "MarkPointName": "MarkPoint",
      //回执接口方法
      "ReceiptService": "TrdReceipt",
      //回执接口方法
      "ReceiptApi": "receipt/v1/save"
    },
    "Redis": {
      "ConnectionString": "192.168.240.132",
      "GuardCheckTime": 3000,
      "MessageLockTime": 3000,
      "FailedIsError": false,
      "NoSupperIsError": false
    },
    "PlanService": {
      "RedisConnectionString": "PlanTask",
      "PostApiName": "v1/post"
    },
    "PlanTask": {
      "ConnectionString": "192.168.240.132,defaultdatabase=2",
      "RetryCount": 3
    },
    "MessagePoster": {
      "default": "HttpPoster"
    },
    "Kafka": {
      "BootstrapServers": "192.168.240.132:9092",
      "GroupId": "kaisen",
      "AutoOffsetReset": "Earliest",
      "EnableAutoCommit": false
    },
    "HttpClient": [
      {
        "Name": "Default",
        "Url": "http://192.168.240.132:8000"
      }
    ],
    "HttpRoute": {
      /// 启用文件上传
      "EnableFormFile": false,
      /// 启用身份令牌
      "EnableAuthToken": false,
      /// 启用Header跟踪(如HTTP请求头)
      "EnableHeader": true,
      /// 特殊URL取第几个路径作为服务名称的映射表
      "HostPaths": 0,
      ///启用快速调用,即直接使用ApiExecuter
      "FastCall": false
    }
  },
  "ConnectionStrings": {
    "PlanTaskDatabase": "Database=db_message_plan;Data Source=192.168.240.132;User Id=root;Password=123456;Persist Security Info=true;pooling=true;CharSet=utf8mb4;port=3306"
  },
  "LogRecorder": {
    /*不注册日志器*/
    "noRegist": true,
    /*是否使用基础文本日志记录器,动态修改无效*/
    "innerLogger": false,
    /*是否启动跟踪日志,可动态修改*/
    "monitor": true,
    /*跟踪日志是否包含详细信息,可动态修改*/
    "details": false,
    /*是否启动SQL语句日志,可动态修改*/
    "sql": false
  },
  "Logging": {
    /*标准日志设置,参考NetCore相关内容*/
    "IncludeScopes": false,
    "LogLevel": {
      "Default": "Trace",
      "Microsoft": "Information"
    },
    "Console": {
      //"Format": "Systemd"
    }
  }
}