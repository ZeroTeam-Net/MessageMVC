<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <Description>ClrZmq的ZeroTeam专用版本</Description>
    <!--monoandroid60;xamarinios10-->
    <TargetFrameworks>netcoreapp3.1</TargetFrameworks>
    <DebugType>portable</DebugType>
    <PackageProjectUrl>https://github.com/ZeroTeam-Net/MessageMVC</PackageProjectUrl>
    <RepositoryUrl>https://github.com/ZeroTeam-Net/MessageMVC.git</RepositoryUrl>
    <PackageLicenseExpression>MPL-2.0</PackageLicenseExpression>
    <RepositoryType>git</RepositoryType>
    <IncludeSource>false</IncludeSource>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
    <Authors>Agebull</Authors>
    <Company>ZeroTeam</Company>
    <PackageReleaseNotes>ClrZmq的ZeroTeam专用版本</PackageReleaseNotes>
    <Product>ClrZmq</Product>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Version>1.0.0.132</Version>
  </PropertyGroup>
  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(TargetFramework)|$(Platform)'=='Release|netcoreapp3.1|AnyCPU'">
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <NoWarn>1701;1702;1705;1591</NoWarn>
    <DocumentationFile>ZeroTeam.ZeroMQ.xml</DocumentationFile>
    <DefineConstants>TRACE</DefineConstants>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(TargetFramework)|$(Platform)'=='Debug|netcoreapp3.1|AnyCPU'">
    <DefineConstants>TRACE;DEBUG</DefineConstants>
    <DocumentationFile>ZeroTeam.ZeroMQ.xml</DocumentationFile>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="zmq\DispoIntPtr.Ansi.cs" />
    <Compile Remove="zmq\DispoIntPtr.cs" />
    <Compile Remove="zmq\Platform.MacOSX.cs" />
    <Compile Remove="zmq\Platform.Posix.cs" />
    <Compile Remove="zmq\Platform.Win32.cs" />
    <Compile Remove="zmq\Platform.__Internal.cs" />
    <Compile Remove="zmq\UnmanagedLibrary.cs" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\..\Core\Core\ZeroTeam.MessageMVC.Core.csproj" />
  </ItemGroup>

  <ItemGroup>
    <None Update="lib\x64\libzmq.dll">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Update="lib\x64\libzmq.pdb">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Update="lib\ubuntu64\libzmq.so">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Update="lib\x86\libzmq.dll">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Update="lib\x86\libzmq.pdb">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>